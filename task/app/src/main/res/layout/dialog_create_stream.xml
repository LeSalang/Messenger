<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/tfs_surface_color"
    android:orientation="vertical"
    android:padding="@dimen/space_size_large_x"
    >

    <TextView
        android:id="@+id/createStreamDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_size_medium"
        android:text="@string/create_new_stream"
        style="@style/TextViewStyle.TitleInDialogMenu"
        />

    <EditText
        android:id="@+id/newTopicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_stream_hint"
        android:paddingHorizontal="@dimen/space_size_large_x"
        android:visibility="visible"
        style="@style/TextViewStyle.EditText"
        />

    <Button
        android:id="@+id/createStreamPositiveButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:text="@string/add"
        style="@style/ButtonStyle"
        />
</LinearLayout>