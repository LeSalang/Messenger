<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray_30"
        android:padding="@dimen/small_padding"
        android:visibility="visible"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/searchTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/medium_padding"
            android:text="@string/title_channels"
            android:textSize="@dimen/appbar_title_text_size"
            android:textColor="@color/white"
            android:visibility="visible"
            />
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/medium_padding"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_188"
            android:hint="@string/search_hint"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="@dimen/appbar_title_icon_size"
            android:layout_height="@dimen/appbar_title_icon_size"
            android:src="@drawable/icon_search"
            android:layout_margin="@dimen/medium_padding"
            />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_30"
        app:tabTextColor="@color/gray_250"
        app:tabSelectedTextColor="@color/gray_250"
        app:tabIndicatorColor="@color/green"
        app:tabIndicatorFullWidth="true" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>