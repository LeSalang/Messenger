<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_18"
    tools:context=".chat.ChatFragment">

    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/chatRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_30"
        android:titleTextColor="@color/white"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/medium_padding"
            android:gravity="left"
            android:text="@string/title_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/appbar_title_text_size" />

    </Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/messageEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:stackFromEnd="true"
        tools:listitem="@layout/item_message" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/medium_padding"
        android:layout_marginLeft="@dimen/medium_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:layout_weight="1"
        android:background="@drawable/message_input_field_bg"
        android:ems="10"
        android:hint="@string/message_hint"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingHorizontal="@dimen/small_padding"
        android:paddingVertical="@dimen/small_padding"
        android:textColor="@color/gray_234"
        android:textColorHint="@color/gray_153"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/sendButton"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginRight="@dimen/medium_padding"
        android:background="@drawable/circle_button_add_file_bg"
        android:src="@drawable/circle_button_add_message_icon"
        app:layout_constraintBottom_toBottomOf="@+id/messageEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messageEditText"
        tools:ignore="RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>