<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/gray_18"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray_30"
        android:padding="@dimen/small_padding"
        android:visibility="visible"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/searchTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/medium_padding"
            android:text="@string/title_people"
            android:textSize="@dimen/appbar_title_text_size"
            android:textColor="@color/white"
            android:visibility="visible"
            />
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/medium_padding"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_188"
            android:hint="@string/search_hint"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="@dimen/appbar_title_icon_size"
            android:layout_height="@dimen/appbar_title_icon_size"
            android:src="@drawable/icon_search"
            android:layout_margin="@dimen/medium_padding"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/peopleRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_people" />

</LinearLayout>