<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_159_alfa_100"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/space_size_medium"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/space_size_large_x"
    >

    <TextView
        android:id="@+id/channelNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/space_size_medium"
        android:textColor="@color/gray_191_alfa_100"
        android:textSize="@dimen/text_size_medium"
        />

</LinearLayout>